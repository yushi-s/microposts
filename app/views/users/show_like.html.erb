<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p><%=t :pref %> <%= @user.prefecture %></p>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3 class="show_count">
      <%= @microposts.count %>
      <%= @title %>
    </h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
  </div> <!-- col-md-8 -->
</div> <!-- row -->
