<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p><%=t :pref %> <%= @user.prefecture %></p>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3 class="show_follow_count">
      <%= @users.count %>
      <%= @title %>
    </h3>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th class="th">Name</th>
            <th class="th">Link</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <th> <%= gravatar_for @user %> </th>
            <th class="show_name"> <%= user.name %> </th>
            <td class="show_link"> <%= link_to t("profile"), user_path(user) %> </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div> <!-- table-responsive -->
  </div> <!-- col-md-8 -->
</div> <!-- row -->
